@model BPMS02.Areas.Dev.Models.BridgeListViewModel

@{
    int i = 1;

    var headerMetadata = Model.BridgeViewModels.FirstOrDefault();

}

<table class="table">
    <thead>
        <tr>
            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SpanNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.StructureType)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BridgeViewModels)
        {
        <tr>
            <td>
                @i
                @{
            i++;
                }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpanNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StructureType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <form asp-area="Dev" asp-controller="Bridge" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxBridgeBody"
          method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Input and Submit elements -->
        每页显示<input asp-for="PagingInfo.ItemsPerPage" style="width:50px"> 条,当前第@{@Html.DisplayFor(p => p.PagingInfo.CurrentPage)}页,共@{@Html.DisplayFor(p => p.PagingInfo.TotalItems)}条记录,共@{@Html.DisplayFor(p => p.PagingInfo.TotalPages)}页, 第<input asp-for="PagingInfo.CurrentPage" style="width:50px"> 页,<button type="submit">Go</button>
        <span asp-validation-for="PagingInfo.ItemsPerPage" class="text-danger"></span>
        <span asp-validation-for="PagingInfo.CurrentPage" class="text-danger"></span>
    </form>

</div>