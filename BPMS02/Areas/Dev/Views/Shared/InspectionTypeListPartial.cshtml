@model ItemListViewModel<InspectionTypeViewModel>
@{
    int i = 1;

    var headerMetadata = Model.ItemViewModels.FirstOrDefault();

}

<h2>InspectionTypeListPartial</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemViewModels)
        {
        <tr>
            <td>
                @i
                @{
            i++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <form asp-area="Dev" asp-controller="InspectionType" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#globalLoading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxBody"
          method="post">
        @Html.Partial("PagingTagPartial", Model.PagingInfo)
    </form>

</div>