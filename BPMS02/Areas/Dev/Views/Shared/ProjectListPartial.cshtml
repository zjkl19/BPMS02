@using BPMS02.Areas.Dev.Models
@model ItemListViewModel<ProjectViewModel>

@{
    int i = 1;

    var headerMetadata = Model.ItemViewModels.FirstOrDefault();

}

<table class="table">
    <thead>
        <tr>
            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.StandardValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.CalcValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.EnterProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.EnterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SiteProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SiteFinishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ExitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ReportProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ReportNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ReportPublishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.DelayDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.DelayRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ProjectProgressExplanation)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.BridgeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemViewModels)
        {
        <tr>
            <td>
                @i
                @{
                i++;
                }
            <td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandardValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalcValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnterProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteFinishedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportPublishedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelayDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelayRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectProgressExplanation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BridgeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <form asp-area="Dev" asp-controller="Project" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxProjectBody"
          method="post">
        @Html.Partial("PagingTagPartial", Model.PagingInfo)
    </form>

</div>