@model BPMS02.Areas.Dev.Models.CreateStaffViewModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>添加职工</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="No" class="control-label"></label>
                    <input asp-for="No" class="form-control" />
                    <span asp-validation-for="No" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<BPMS02.Areas.Dev.Models.Gender>()" class="form-control"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfficePhone" class="control-label"></label>
                    <input asp-for="OfficePhone" class="form-control" />
                    <span asp-validation-for="OfficePhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobilePhone" class="control-label"></label>
                    <input asp-for="MobilePhone" class="form-control" />
                    <span asp-validation-for="MobilePhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <select asp-for="Position" asp-items="Html.GetEnumSelectList<BPMS02.Areas.Dev.Models.Position>()" class="form-control"></select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle" class="control-label"></label>
                    <select asp-for="JobTitle" asp-items="Html.GetEnumSelectList<BPMS02.Areas.Dev.Models.JobTitle>()" class="form-control"></select>
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Education" class="control-label"></label>
                    <select asp-for="Education" asp-items="Html.GetEnumSelectList<BPMS02.Areas.Dev.Models.Education>()" class="form-control"></select>
                    <span asp-validation-for="Education" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HiredDate" class="control-label"></label>
                    <input asp-for="HiredDate" class="form-control" />
                    <span asp-validation-for="HiredDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="添加" class="btn btn-default" />
                </div>
</form>
    </div>
</div>


<div>
    <a asp-action="Index">返回</a>
</div>
