@model BPMS02.Areas.Dev.Models.ContractListViewModel

@{
    int i = 1;

    var headerMetadata = Model.ContractViewModels.FirstOrDefault();

}


<table class="table">
    <thead>
        <tr>
            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.No)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SignedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.PromisedDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.JobContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ProjectLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ClientContactPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.ClientContactPersonPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.AcceptWay)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SignStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.ContractViewModels)
        {
        <tr>
            <td>
                @i
                @{
            i++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromisedDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientContactPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientContactPersonPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcceptWay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" target="_blank">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>
<div class="row">
    <form asp-area="Dev" asp-controller="Contract" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxContractBody"
          method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Input and Submit elements -->
        每页显示<input asp-for="PagingInfo.ItemsPerPage" style="width:50px"> 条,当前第@{@Html.DisplayFor(p => p.PagingInfo.CurrentPage)}页,共@{@Html.DisplayFor(p => p.PagingInfo.TotalItems)}条记录,共@{@Html.DisplayFor(p => p.PagingInfo.TotalPages)}页, 第<input asp-for="PagingInfo.CurrentPage" style="width:50px"> 页,<button type="submit">Go</button>
        <span asp-validation-for="PagingInfo.ItemsPerPage" class="text-danger"></span>
        <span asp-validation-for="PagingInfo.CurrentPage" class="text-danger"></span>
    </form>

</div>