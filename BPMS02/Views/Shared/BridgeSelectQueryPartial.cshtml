@model BridgeSelectQuery

<div class="row">
    <form asp-area="" asp-controller="Bridge" asp-action="QueryByName"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#localLoading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxSelectBridgeBody"
          method="post">
        <label asp-for="Name"> </label><input asp-for="Name" />
        <button type="submit">按桥梁名称查询</button>
    </form>
</div>
<div class="row">
    <form asp-area="" asp-controller="Bridge" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#localLoading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxSelectBridgeBody"
          method="get">
        <button type="submit">列出所有桥梁</button>
    </form>

</div>