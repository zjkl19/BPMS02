@model BPMS02.Areas.Dev.Models.StaffListViewModel


@{
    int i = 1;

    var headerMetadata = Model.StaffViewModels.FirstOrDefault();

}


<table class="table">
    <thead>
        <tr>
            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.No)
            </th>

            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.OfficePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.MobilePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.HiredDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.StaffViewModels)
        {
            <tr>
                <td>
                    @i
                    @{
                        i++;
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobilePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HiredDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-primary" target="_blank">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
<div class="row">
    <form asp-area="Dev" asp-controller="Staff" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxBody"
          method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Input and Submit elements -->
        每页显示<input asp-for="PagingInfo.ItemsPerPage" style="width:50px"> 条,当前第@{@Html.DisplayFor(p => p.PagingInfo.CurrentPage)}页,共@{@Html.DisplayFor(p => p.PagingInfo.TotalItems)}条记录,共@{@Html.DisplayFor(p => p.PagingInfo.TotalPages)}页, 第<input asp-for="PagingInfo.CurrentPage" style="width:50px"> 页,<button type="submit">Go</button>
        <span asp-validation-for="PagingInfo.ItemsPerPage" class="text-danger"></span>
        <span asp-validation-for="PagingInfo.CurrentPage" class="text-danger"></span>
    </form>

</div>
