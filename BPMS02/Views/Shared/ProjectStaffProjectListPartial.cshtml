
@model ProjectStaffProjectListViewModel

@{
    int i = 1;

    var headerMetadata = Model.ProjectStaffProjectViewModels.FirstOrDefault();

}

<div>
    项目名称：@Model.ProjectName
    </div>

<table class="table table-bordered">
    <thead>
        <tr>

            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Labor)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Ratio)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.StandardValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.CalcValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectStaffProjectViewModels)
        {
        <tr>
            <td>
                @i
                @{
            i++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Labor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ratio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StandardValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalcValue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <a asp-area="" asp-controller="StaffProject" asp-action="CreateByProjectId" asp-route-id="@Model.ProjectId" target="_blank">添加参与人员</a>

</div>
