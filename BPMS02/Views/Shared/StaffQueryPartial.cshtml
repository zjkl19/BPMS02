@model BPMS02.Areas.Dev.Models.StaffQuery



<div class="col-sm-12 col-lg-4">
<form asp-area="Dev" asp-controller="Staff" asp-action="QueryByNo"  
      data-ajax="true"
      data-ajax-mode="replace"
      data-ajax-loading="#loading"
      data-ajax-loading-duration=1000
      data-ajax-update="#ajaxBody" 
      method="post">
    <label asp-for="No"> </label><input asp-for="No" />
    <button type="submit">按工号查询</button>
</form>
</div>

<div class="col-sm-12 col-lg-4">
    <form asp-area="Dev" asp-controller="Staff" asp-action="QueryByName"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxBody"
          method="post">
        <label asp-for="Name"> </label><input asp-for="Name" />
        <button type="submit">按姓名查询</button>
    </form>
</div>
