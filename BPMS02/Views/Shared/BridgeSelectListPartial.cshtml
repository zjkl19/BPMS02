@model ItemListViewModel<BridgeSelectViewModel>

@{
    int i = 1;

    var headerMetadata = Model.ItemViewModels.FirstOrDefault();

}

<table class="table">
    <thead>
        <tr>
            <th>
                <!-- RadioBox -->
            </th>

            <th>
                序号
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.SpanNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.StructureType)
            </th>
            <th>
                @Html.DisplayNameFor(model => headerMetadata.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemViewModels)
        {
        <tr>
            <td>
                @Html.RadioButtonFor(modelItem => item.Id, false)
            </td>
            <td style="display: none">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @i
                @{
            i++;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpanNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StructureType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <form asp-area="" asp-controller="Bridge" asp-action="List"
          data-ajax="true"
          data-ajax-mode="replace"
          data-ajax-loading="#loading"
          data-ajax-loading-duration=1000
          data-ajax-update="#ajaxSelectBridgeBody"
          method="post">
        @Html.Partial("PagingTagPartial", Model.PagingInfo)
    </form>

</div>